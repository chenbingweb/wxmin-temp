/*显示隐藏  */
.show_content
{
  animation:showContent 0.2s linear;
  animation-fill-mode:forwards;
  animation-delay: 0;
}
@keyframes showContent {
  0% {
    height: 0;
    opacity: 0;
  }
  100%{
   height:460rpx;
     opacity: 1;
  }
}
/*显示隐藏  */
.hide_content
{
  animation:hideContent 0.2s linear;
  animation-fill-mode:forwards;
  animation-delay: 0;
}
@keyframes hideContent {
  0% {
   height:460rpx;
     opacity: 1;
  }
  100%{
   height:0;
     opacity: 0;
  }
}
/*淡出动画  */
.opaciy_an
{
  animation:pageAn 0.4s linear;
  animation-fill-mode:forwards;
  animation-delay: 0;
}
@keyframes pageAn {
  0% {
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}